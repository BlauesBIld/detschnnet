<body class="bg-dark text-white mt-3">
<div class="container">
    <nav class="navbar navbar-dark text-end" id="navbar">
        <a class="navbar-brand" href="/">DetschnNet</a>
        <a href="/logout" class="btn btn-outline-danger" role="button">Logout</a>
    </nav>

    <div class="row my-4 mb-5 text-center">
        <h1>Welcome <%= loggedInUser.username %></h1>
    </div>
    <div class="row my-4 text-center">
        <h2>Connections:</h2>
    </div>
    <div class="row">
        <div class="text-center">
            <a class="btn btn-primary btn-lg fs-3 fw-bold mx-5" href="<%= nightbotLink %>">NightBot</a>
            <a class="btn btn-twitch btn-lg fs-3 fw-bold mx-5" href="<%= twitchLink %>">Twitch</a>
            <a class="btn btn-success btn-lg fs-3 fw-bold mx-5" href="<%= spotifyLink %>">Spotify</a>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
